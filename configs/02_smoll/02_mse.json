{
    "desc": "Example smolluchowski equation solution using bootstrapping",
    "date": "January 22, 2022",
    
    "rng_seed/range": [0, 100000, 1000],    
    "problem": "smolluchowski",

    "opt/dstr": "adam",
    "opt/lr": 0.001,
    "opt/epoch": 200000,
    
    "trg/btstrp": false,
    
    "g01/dim": 1,
    "g01/eval/ug1/x/n":  100,
    "g01/eval/ug2/x/n":  100,
    "g01/pts/n/list": [1,   10, 100, 1000, 20, 400], 
    "g01/eq/n/list" : [400, 40,   4,    1, 20,   1],
    "g01/pts/detspc/list": [false, true],
    
    "g02/dim": 1,
    "g02/eval/ug1/x/n":  100,
    "g02/eval/ug2/x/n":  100,
    "g02/pts/n": 1, 
    "g02/eq/n/list" : [256, 128, 64, 32, 16, 8, 4, 2, 1],
    "g02/pts/detspc": false,

    "g03/dim/list": [2, 3],
    "g03/eval/ug1/x/n/list":  [10000, 8000],
    "g03/eval/ug2/x/n/list":  [10000, 8000],
    "g03/pts/n/list": [1,   10, 100, 1000], 
    "g03/eq/n/list" : [400, 40,  4,    1],
    "g03/pts/detspc": false,
    
    "eq/x/dstr": "uniform",
    "eq/x/low":  [0.0],
    "eq/x/high": [1.0],
    
    "nn/dstr": "mlp",
    "nn/width/list": [64, 32, 128],
    "nn/hidden/list": [2, 1, 3, 4], 
    "nn/act/list": ["silu", "tanh", "relu"],
    
    "ker/dstr": "pnorm",
    "ker/norm/p": 0.5,
    "ker/norm/max": 1.14,
    "ker/slope": 1.23,
    "ker/alpha": 1.5,
    "ker/beta":  0.0,
    "ker/gamma": 1.0,
    
    "eq/t/dstr": "delta",
    "eq/t/loc/dstr": "uniform",
    "eq/t/loc/low":  0.0,
    "eq/t/loc/high": 1.0,
    
    "ic/t": 0.0,
    "ic/x/dstr": "eq/x",
    "ic/n":      "eq/n",
    "ic/w/list": [1.0, 0.1, 10.0, 100.0, 1000.0],
    "ic/dstr": "linear",
    "ic/bias": 3.0,
    "ic/slope": "[-1.0/dim]*dim",
    
    "eval/ug1/dstr": "grid",
    "eval/ug1/t/n":  100,
    "eval/ug1/bs":     0,
    "eval/ug1/frq": 2500,
    "eval/ug1/t/dstr": "uniform",
    "eval/ug1/t/low":   0.0,
    "eval/ug1/t/high":  1.0,
    "eval/ug1/x/dstr": "uniform",
    "eval/ug1/x/low":  [0.0],
    "eval/ug1/x/high": [1.0],
    
    "eval/ug2/dstr": "grid",
    "eval/ug2/t/n":  100,
    "eval/ug2/bs":    8,
    "eval/ug2/frq":   1,
    "eval/ug2/t/dstr": "eq/t",
    "eval/ug2/x/dstr": "eq/x",

    "io/avg/frq":    100,
    "io/ckpt/frq":  2500,
    "io/mon/frq":   1000,
    "io/tch/dtype": "float32",
    "io/cmprssn_lvl": 0,
    "io/eval/bs": 256,
    "io/flush/frq": 0,
 
    "looping/lines": ["ovat(aslist('rng_seed'),                                              ",
                      "     cat(cart(zip('g01/pts/n', 'g01/eq/n'),                           ",
                      "              'g01/eval/ug1/x/n', 'g01/eval/ug2/x/n',                 ",
                      "              'g01/dim', 'g01/pts/detspc').lstrip('g01/'),            ",
                      "         ovat('g02/*').lstrip('g02/'),                                ",
                      "         cart(zip('g03/dim', 'g03/eval/ug1/x/n', 'g03/eval/ug2/x/n'), ",
                      "              zip('g03/pts/n', 'g03/eq/n'),                           ",
                      "              'g03/pts/detspc').lstrip('g03/')),                      ",
                      "     'rest')                                                          "]
}